.row
  .col-xs-12
    %h1= @player.name
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %thead.sortable
          %tr
            %th.col-xs-2= "ID"
            %th.col-xs-2= "Jornada"
            %th.col-xs-2= "Nom"
            %th.col-xs-2= "Equip"
            %th.col-xs-2= "Rival"
            %th.col-xs-2= "Valoració"
        %tbody= render @player.statistics.game
  .col-xs-12
    %h1= "Acumulats"
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-condensed
        %thead.sortable
          %tr
            %th.col-xs-2= "ID"
            %th.col-xs-2= "Jornada"
            %th.col-xs-2= "Nom"
            %th.col-xs-2= "Equip"
            %th.col-xs-2= "Rival"
            %th.col-xs-2= "Valoració"
        %tbody= render @player.statistics.player