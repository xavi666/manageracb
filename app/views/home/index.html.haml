%div.col-sm-9
  %div.row
    %h3="PREDICCIONS DE PARTIDOS"
    %div.row
      - @games.each do |game|
        #predictions.col-xs-6.col-md-4
          %a{:href => game_predictions_path(game.id)}
            %div.col-xs-6.col-md-6.box.white
              =image_tag("teams/"+game.local_team.short_code+".jpg", class: "team")
              =game.local_team.short_code
            %div.col-xs-6.col-md-6.box.white
              =game.visitant_team.short_code
              =image_tag("teams/"+game.visitant_team.short_code+".jpg", class: "team")
  %div
  %div.row
    %h3="OPTIMIZA TU EQUIPO"
%div.col-sm-3
  %div.row
    = render partial: "inc/login"
  %div.row
    %h3="RECOMENDACIONES"
