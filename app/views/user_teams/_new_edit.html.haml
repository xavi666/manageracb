      %table.table.table-striped
        %thead
          %tr
            %th="Jugador / Equipo"
            %th="VALORACIÃ“N"
            %th="PUNTOS"
            %th="REBOTES"
            %th="ASISTENCIAS"
            %th="3PM"
            %th
        %tbody
          = f.fields_for :bases do |builder|
            =render "user_team_player/new_edit", :f => builder, players: Player.active.bases
